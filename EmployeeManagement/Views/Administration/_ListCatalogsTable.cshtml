@model IEnumerable<EmployeeManagement.Models.Catalog>
<table class="table">
    <thead class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="EditCatalog" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>                    
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal" data-url="@Url.Action("DeleteCatalog","Administration",new { item.Id })">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>