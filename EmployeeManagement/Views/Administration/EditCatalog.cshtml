@model CreateCatalogViewModel

@{
    ViewData["Title"] = "Edit Catalog";
}

<h1>Edit Catalog</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCatalog">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label asp-for="CatalogName" class="control-label"></label>
                        <input asp-for="CatalogName" class="form-control" />
                        <span asp-validation-for="CatalogName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CatalogValue" class="control-label"></label>
                        <input asp-for="CatalogValue" class="form-control" />
                        <span asp-validation-for="CatalogValue" class="text-danger"></span>
                    </div>
                    <select asp-for="CatalogParentId" asp-items="Model.CatalogsList" class="form-control">
                        <option value="">Select Catalog</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-9">
                    <label>New Value</label>
                    <input id="input-catalog-value" type="text" class="form-control" />
                </div>
                <div class="col-2" style="top: 8px;">
                    <br />
                    <button id="add-catalog-value" type="button" class="btn btn-success" >+Add</button>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <table id="values-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Value</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.ValueRows.Count(); i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" name="ValueRows[@i].Id" value="@Model.ValueRows[i].Id" />
                                        <input type="hidden" name="ValueRows[@i].CatalogValue" value="@Model.ValueRows[i].CatalogValue" />
                                        @Model.ValueRows[i].CatalogValue
                                    </td>
                                    <td> <button type="button" class="remove_new_value btn btn-danger mb-3"><i class="fas fa-trash-alt"></i></button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListCatalogs">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/Administration/EditCatalog.js"></script>
}