
@model CreateCatalogViewModel

<div class="modal fade" id="addCatalogModal" tabindex="-1" role="dialog" aria-labelledby="addCatalogModal" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <form asp-action="CreateCatalog" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCatalogModalLabel">Create New Catalog</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label asp-for="CatalogName"></label>
                                <input asp-for="CatalogName" class="form-control" />
                                <span asp-validation-for="CatalogName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CatalogValue" class="control-label"></label>
                                <input asp-for="CatalogValue" class="form-control" />
                                <span asp-validation-for="CatalogValue" class="text-danger"></span>
                            </div>
                            <select asp-for="CatalogParentId" asp-items="Model.CatalogsList" class="form-control">
                                <option value="">Select Catalog</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-9">
                            <label>New Value</label>
                            <input id="input-catalog-value" type="text" class="form-control" />
                        </div>
                        <div class="col-2" style="top: 8px;">
                            <br />
                            <button id="add-catalog-value" type="button" class="btn btn-success mb-3">+Add</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <table id="values-table" class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Value</th>
                                        <th>Options</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
